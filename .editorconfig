# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs

# ファイルのエンコーディング
[*]
charset = utf-8

# インデントの設定
[*.js]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

# 改行コードの設定
[*.{js,ts,json,toml}]
end_of_line = lf

# ファイルの末尾に空行を挿入するかどうか
insert_final_newline = true

# 行末の空白文字の自動削除
trim_trailing_whitespace = true

